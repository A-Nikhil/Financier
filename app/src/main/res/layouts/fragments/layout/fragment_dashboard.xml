<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/helloUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="22dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/helloUser"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/financierText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/financierText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="33dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/financierText"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/topStats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloUser"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/topStats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="28dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/topStats"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/numberExpenditures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/financierText"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/numberExpenditures"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/numberExpenditures"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/totalMonthly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topStats"
        app:layout_editor_absoluteX="20dp"
        app:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/totalMonthly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="22dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/totalMonthly"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/monthlyPercentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberExpenditures"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="263dp" />

    <TextView
        android:id="@+id/monthlyPercentage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="34dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/monthlyPercentage"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/topCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalMonthly"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="324dp" />

    <TextView
        android:id="@+id/topCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="22dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/topCategory"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/secondCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthlyPercentage"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="397dp" />

    <TextView
        android:id="@+id/secondCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/secondCategory"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/statsTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCategory"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="458dp" />

    <TextView
        android:id="@+id/statsTotal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="19dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/statsTotal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/remark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondCategory"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="541dp" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="69dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/remark"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statsTotal"
        app:layout_editor_absoluteX="25dp"
        app:layout_editor_absoluteY="600dp" />


</androidx.constraintlayout.widget.ConstraintLayout>