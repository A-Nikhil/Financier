<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/NewExpenditureDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExpenditureDialogTitle"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/NewExpenditureDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExpenditureDialogMessage"
        android:textColor="#424949"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/NewExpenditureDialogName"
        android:layout_width="383dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/ExpenditureDialogName"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="85dp" />

    <Spinner
        android:id="@+id/categories"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/NewExpenditureDialogDate"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ExpenditureDialogDate"
        android:importantForAutofill="no"
        android:inputType="date"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp" />

    <EditText
        android:id="@+id/NewExpenditureDialogAmount"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ExpenditureDialogAmount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/addNewExpenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent"
        android:text="@string/addNewExpenditure"
        android:textColor="@color/primaryDark"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/cancelAddNewExpenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelAddNewExpenditure"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="341dp" />

</androidx.constraintlayout.widget.ConstraintLayout>